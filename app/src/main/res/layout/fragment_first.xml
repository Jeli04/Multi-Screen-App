<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FirstFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:background="#FFFFFF"
            android:src="@drawable/textlogowithimage" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/school_map" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aBuilding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4FA7EA"
                android:fontFamily="@font/oswald_bold"
                android:gravity="center"
                android:text="A Building"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/cBuilding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#979696"
                android:fontFamily="@font/oswald_bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="C Building"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/eBuilding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4FA7EA"
                android:fontFamily="@font/oswald_bold"
                android:gravity="center"
                android:text="E Building"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/gym"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#979696"
                android:fontFamily="@font/oswald_bold"
                android:gravity="center"
                android:text="Gymnasium"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4FA7EA"
                android:fontFamily="@font/oswald_bold"
                android:gravity="center"
                android:text="Library"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/theatre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#979696"
                android:fontFamily="@font/oswald_bold"
                android:gravity="center"
                android:text="Theatre"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/mpr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4FA7EA"
                android:fontFamily="@font/oswald_bold"
                android:gravity="center"
                android:text="Multi-Purpose Room"
                android:textColor="@color/black"
                android:textSize="32.5dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>